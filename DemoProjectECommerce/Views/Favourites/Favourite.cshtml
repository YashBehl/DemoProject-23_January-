@using DemoProjectECommerce.productCategory.ViewModels;
@model FavouriteViewModel

@{
    ViewData["Title"] = "Your Favourites";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <div class="text-center">
            <h2>Your Favourites</h2>
        </div>

        <table class="table">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Price</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.favourite.favouriteItems)
                {
                    <tr>
                        <td class="align-middle">@item.product.productName</td>
                        <td class="align-middle">@item.product.productPrice.ToString("c")</td>
                        <td class="align-middle">
                            <a class="btn btn-outline-danger" asp-controller="Favourites" asp-action="removeItemFromFav"
                               asp-route-id="@item.product.productId">
                                Remove
                            </a>
                            <a class="btn btn-outline-primary" asp-controller="Favourites" asp-action="addItemToFav"
                               asp-route-id="@item.product.productId">
                                Add
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="text-center">
            <div class="btn-group">
                <a class="btn btn-outline-success" asp-controller="Products" asp-action="Index">Add More Products</a>
            </div>
        </div>
    </div>
</div>