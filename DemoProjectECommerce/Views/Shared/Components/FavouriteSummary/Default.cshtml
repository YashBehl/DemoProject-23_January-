@model int;

@if (User.Identity.IsAuthenticated && User.IsInRole("User"))
{
    @if (Model > 0)
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Favourites" asp-action="Favourite">
               Favourites : @Model
            </a>
        </li>
    }
}
