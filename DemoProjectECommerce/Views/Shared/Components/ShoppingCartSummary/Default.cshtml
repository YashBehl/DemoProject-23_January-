@model int;

@if(User.Identity.IsAuthenticated && User.IsInRole("User"))
{
    @if (Model > 0)
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Carts" asp-action="ShoppingCart">
                <i class="bi bi-cart4"></i>Cart: @Model
            </a>
        </li>
    }
}
