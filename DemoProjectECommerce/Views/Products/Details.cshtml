@model DemoProjectECommerce.Models.Domain.Product

@{
    ViewData["Title"] = "Product Details";
}

<div class="row">
        <div class="col-md-8 offset-2">
            <div class="card mb-12">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-info">
                            <p class="card-text">
                                <h5 class="card-text">
                                    @Model.productName
                                    <a class="text-white float-right"><i class="bg-info bi-pencil-square"></i></a>
                                </h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <img src="@Model.productImageUrl" width="100%" alt="@Model.productName" />
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <p class="card-text">@Model.productDescription</p>
                            <p class="card-text"><b>Price: </b>Rs. @Model.productPrice</p>
                            <p class="card-text"><b>Quantity Available: </b>@Model.productQuantity</p>
                            <p class="card-text"><b>Category: </b>@Model.productCategory</p>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer">
                            <p class="card-text">
                                <a class="btn btn-outline-primary float-right" asp-action="Index">
                                    Back to list of products
                                </a>
                                <a class="btn btn-success text-white"><i class="bi bi-cart-plus"></i>Add to cart</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</div>
