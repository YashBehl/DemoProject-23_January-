
@model IEnumerable<DemoProjectECommerce.Models.Domain.Product>;

@{
    ViewData["Title"] = "Products List";
}

@if(User.Identity.IsAuthenticated && User.IsInRole("Admin"))
{
  <div class="container-fluid">
        <div class="row">
            <div class="col-md-6 ">
                <p>
                    <h4>Products List</h4>
                </p>
                <table class="table">
                    <thead>
                        <tr class="text-center">
                            <th>@Html.DisplayNameFor(model => model.productId)</th>
                            <th>@Html.DisplayNameFor(model => model.productName)</th>
                            <th>@Html.DisplayNameFor(model => model.productDescription)</th>
                            <th>@Html.DisplayNameFor(model => model.productPrice)</th>
                            <th>@Html.DisplayNameFor(model => model.productImageUrl)</th>
                            <th>@Html.DisplayNameFor(model => model.productQuantity)</th>
                            <th>@Html.DisplayNameFor(model => model.productCategory)</th>
                            <th>@Html.DisplayNameFor(model => model.createdAt)</th>
                            <th>@Html.DisplayNameFor(model => model.isUnavailable)</th>
                            <th>@Html.DisplayNameFor(model => model.isHot)</th>
                            <th>@Html.DisplayNameFor(model => model.isTrending)</th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="align-middle">
                                    @Html.DisplayFor(modelItem => item.productId)
                                </td>
                                <td class="align-middle">
                                    @Html.DisplayFor(modelItem => item.productName)
                                </td>
                                <td class="align-middle">
                                    @Html.DisplayFor(modelItem => item.productDescription)
                                </td>
                                <td class="align-middle">
                                    @Html.DisplayFor(modelItem => item.productPrice)
                                </td>
                                <td class="align-middle">
                                    @Html.DisplayFor(modelItem => item.productImageUrl)
                                </td>
                                <td class="align-middle">
                                    @Html.DisplayFor(modelItem => item.productQuantity)
                                </td>
                                <td class="align-middle">
                                    @Html.DisplayFor(modelItem => item.productCategory)
                                </td>
                                <td class="align-middle">
                                    @Html.DisplayFor(modelItem => item.createdAt)
                                </td>
                                <td class="align-middle">
                                    @Html.DisplayFor(modelItem => item.isUnavailable)
                                </td>
                                <td class="align-middle">
                                    @Html.DisplayFor(modelItem => item.isHot)
                                </td>
                                <td class="align-middle">
                                    @Html.DisplayFor(modelItem => item.isTrending)
                                </td>
                                <td class="align-middle">
                                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.productId">Edit</a>
                                </td>
                                <td class="align-middle">
                                    @if (item.isUnavailable != true)
                                    {
                                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.productId">Delete</a>
                                    }
                                    @if (item.isUnavailable == true)
                                    {
                                        <a class="btn btn-success" asp-action="makeAvailable" asp-route-id="@item.productId">Avail</a>
                                    }
                                </td>
                                <td class="align-middle">
                                    @if (item.isHot != true)
                                    {
                                        <a class="btn btn-warning" asp-action="markAsHot" asp-route-id="@item.productId">Mark Hot</a>
                                    }
                                    @if (item.isHot == true)
                                    {
                                        <a class="btn btn-info" asp-action="disableHot" asp-route-id="@item.productId">Disable Hot</a>
                                    }
                                </td>
                                <td class="align-middle">
                                    @if (item.isTrending != true)
                                    {
                                        <a class="btn btn-dark" asp-action="markAsTrending" asp-route-id="@item.productId">Mark Trending</a>
                                    }
                                    @if (item.isTrending == true)
                                    {
                                        <a class="btn btn-info" asp-action="disableTrending" asp-route-id="@item.productId">Disable Trending</a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
  </div>
}